{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "ITT Node Services",
    "description": "Node Services Documentation, v1",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:5002",
  "basePath": "/api/",
  "tags": [
    {
      "name": "Node API",
      "description": "Node API for market, database and others"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "security": {
    "APIKeyHeader": []
  },
  "paths": {
    "/tickers": {
      "get": {
        "tags": [
          "Tickers"
        ],
        "summary": "Get all tickers in system",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Tickers"
            }
          }
        }
      }
    },
    "/ticker": {
      "get": {
        "tags": [
          "Ticker"
        ],
        "summary": "Get a ticker with symbol as parameter",
        "parameters": [{
          "in": "query",
          "name": "symbol",
          "type": "string",
          "required": true,
          "description": "Symbol of the ticker to retrieve"
        }],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Ticker"
            }
          }
        }
      }
    },
    "/security/2FA/generate/{telegram_chat_id}": {
      "get": {
        "tags": [
          "2FA"
        ],
        "summary": "Generate a 2FA secret for the Telegram Chat ID",
        "parameters": [{
          "in": "path",
          "name": "telegram_chat_id",
          "type": "integer",
          "required": true,
          "description": "Numeric ID of the user to get"
        }],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/2FASecret"
            }
          }
        }
      }
    },
    "/security/2FA/qr/{telegram_chat_id}": {
      "get": {
        "tags": [
          "2FA"
        ],
        "summary": "Get the QR data containing the 2FA secret for the Telegram Chat ID",
        "parameters": [
          {
            "in": "path",
            "name": "telegram_chat_id",
            "type": "integer",
            "required": true,
            "description": "Numeric ID of the user to get"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/2FASecret"
            }
          }
        }
      }
    },
    "/security/2FA/verify": {
      "get": {
        "tags": [
          "2FA"
        ],
        "summary": "Verifies the token for the Telegram Chat ID",
        "parameters": [
          {
            "in": "query",
            "name": "token",
            "type": "integer",
            "required": true,
            "description": "2FA OTP Token for the authentication"
          },
          {
            "in": "query",
            "name": "telegram_chat_id",
            "type": "integer",
            "required": true,
            "description": "Numeric ID of the user to get"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/2FASecret"
            }
          }
        }
      }
    }
  },
  "securityDefinitions": {
    "APIKeyHeader": {
      "type": "apiKey",
      "in": "header",
      "name": "NSVC-API-KEY"
    }
  },
  "definitions": {
    "Ticker": {
      "required": [
        "symbol"
      ],
      "properties": {
        "symbol": {
          "type": "string",
          "uniqueItems": true,
          "example": "BTC"
        }
      }
    },
    "Tickers": {
      "type": "array",
      "$ref": "#/definitions/Ticker"
    },
    "2FASecret": {
      "required": [
        "telegram_chat_id"
      ],
      "properties": {
        "telegram_chat_id": {
          "type": "integer",
          "uniqueItems": true,
          "example": -1
        }
      }
    }
  }
}